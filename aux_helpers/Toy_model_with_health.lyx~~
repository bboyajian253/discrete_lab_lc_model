\defbeamertemplate*{footline}{my footline}
{
    \ifnum \insertframenumber=0
		\leavevmode%
      	\hbox{%
      	\begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex,center]{}%
        % empty environment to raise height
      	\end{beamercolorbox}}%
      	\vskip0pt%
    \else
		\hbox{\begin{beamercolorbox}[wd=1\paperwidth,ht=5ex,dp=1ex,right]{framenumber}%
		\usebeamerfont{framenumber}\insertframenumber{} \hspace*{2ex}
    	\end{beamercolorbox}}%
  		
    \fi
}

